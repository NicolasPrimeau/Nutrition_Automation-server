#:kivy 1.8.0

<SettingAlertScreen>:
    SettingAlertGrid:
        rows:1
        cols:2
        spacing:10
        padding:10

        Button:
            background_normal: "Images/blank.png"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'settings'
            text:"Back"
            color: 0,0,0,1
            font_size: 30
            size_hint: 0.25, 0.25

        SettingAlertSubGrid:
            rows:2
            cols:1
            Button:
                text:'New Alert'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'new_alert'
                size_hint: 0.20, 0.20
                color: 0,0,0,1
                background_normal: "Images/Box.png"
                padding:10,10
            SettingAlertList:
                rows:1
                cols:1
                size_hint: 0.8, 0.8

