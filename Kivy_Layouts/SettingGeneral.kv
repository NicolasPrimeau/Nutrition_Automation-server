#:kivy 1.8.0

<SettingGeneralScreen>:
    SettingGeneralGrid:
        rows:1
        cols:2
        spacing:10
        padding:10

        BackButtonGrid:
            rows:2
            cols:1
            size_hint_x:0.25
            spacing:10
            Button:
                background_normal: "Images/blank.png"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'settings'
                text:"Back"
                color: 0,0,0,1
                font_size: 30
                size_hint_y: 0.5
            Button:
                background_normal: "Images/blank.png"
                text:"Apply"
                color: 0,0,0,1
                font_size: 30
                size_hint: 0.20, 0.20
                size_hint_y: 0.5
                on_press: root.set_general_settings()


        SettingPanel:
            rows: 6
            cols: 1

