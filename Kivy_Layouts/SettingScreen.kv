#:kivy 1.8.0

<SettingsScreen>:
    SettingsGrid:
        rows:1
        cols:2
        spacing:10
        padding:10

        Button:
            background_normal: "Images/blank.png"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'main'
            text:"Back"
            color: 0,0,0,1
            font_size: 30
            size_hint: 0.25, 0.25

        SettingGrid:
            rows:4
            cols:1
            padding:10
            spacing:10
            Button:
                background_normal: "Images/blank.png"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'setting_areas'
                text:"Areas"
                color: 0,0,0,1
                font_size: 30
                size_hint: 0.25, 0.25
            Button:
                background_normal: "Images/blank.png"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'setting_alerts'
                text:"Alerts"
                color: 0,0,0,1
                font_size: 30
                size_hint: 0.25, 0.25
            Button:
                background_normal: "Images/blank.png"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'setting_contact'
                text:"Contacts"
                color: 0,0,0,1
                font_size: 30
                size_hint: 0.25, 0.25
            Button:
                background_normal: "Images/blank.png"
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'setting_general'
                text:"General"
                color: 0,0,0,1
                font_size: 30
                size_hint: 0.25, 0.25