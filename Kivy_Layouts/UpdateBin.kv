#:kivy 1.8.0

<UpdateBinScreen>:
    UpdateBinGrid:
        size: root.size
        rows:1
        cols:2
        spacing:10
        padding:10

        Button:
            background_normal: "Images/blank.png"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'setting_areas'
            text:"Back"
            color: 0,0,0,1
            font_size: 30
            size_hint_x: 0.25

        UpdateBinDetailGrid:
            rows:1
            cols:2
            spacing:10